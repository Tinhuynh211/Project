<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <servlet-class>controller.login.ForgotPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginGoogleServlet</servlet-name>
        <servlet-class>controller.login.LoginGoogleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginAccount</servlet-name>
        <servlet-class>controller.login.LoginAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RunWeb</servlet-name>
        <servlet-class>controller.login.RunWeb</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutAccount</servlet-name>
        <servlet-class>controller.login.LogoutAccount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <url-pattern>/ForgotPasswordServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginGoogleServlet</servlet-name>
        <url-pattern>/LoginGoogleServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginAccount</servlet-name>
        <url-pattern>/LoginAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RunWeb</servlet-name>
        <url-pattern>/RunWeb</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutAccount</servlet-name>
        <url-pattern>/LogoutAccount</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
